<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<springProfile name="devlocal">
		<springProperty scope="context" name="lokiUrl" source="trafficprocessor.observability.loki.url" />
		<springProperty scope="context" name="appName" source="spring.application.name" />

		<appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
			<http>
				<url>${lokiUrl}</url>
			</http>
			<labels>
				app=${appName}
				host=${HOSTNAME}
				traceId=%X{traceId:-NONE}
				level=%level
			</labels>
			<message>
				<pattern>${CONSOLE_LOG_PATTERN}</pattern>
			</message>
			<structuredMetadata>off</structuredMetadata>
		</appender>

		<root level="INFO">
			<appender-ref ref="LOKI" />
		</root>
	</springProfile>
</configuration>